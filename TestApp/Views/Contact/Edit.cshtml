@model СontactViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />

<form method="post" asp-action="Edit" class="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="CName" class="control-label"></label>
        <input asp-for="CName" class="form-control" />
        <span asp-validation-for="CName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CMobilePhone" class="control-label"></label>
        <input asp-for="CMobilePhone" class="form-control" type="tel" />
        <span asp-validation-for="CMobilePhone" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CJobTitle" class="control-label"></label>
        <input asp-for="CJobTitle" class="form-control" type="text" />
        <span asp-validation-for="CJobTitle" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CBirthDate" class="control-label"></label>
        <input asp-for="CBirthDate" class="form-control" type="date" />
        <span asp-validation-for="CBirthDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <div class="container ">
            <div class="row justify-content-between">
                <input type="submit" value="Confirm edit" class="btn btn-primary col-md-2 col-sm-3 col-12 mb-2" />
                <a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger col-md-2 col-sm-2 col-12 mb-2">Delete</a>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



